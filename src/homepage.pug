            li#nav1 <i class="fa fa-circle"></i>
            li#nav2 <i class="fa fa-circle"></i>
            li#nav3 <i class="fa fa-circle"></i>
    div.pusher-container
        div.pusher
            section.p0-content#sec0
                div
                    include ../assets/april.svg
                h1#title #{data.title}
                h2#subtitle #{data.subtitle}
                h2#enter ENTER
            section.p1-content#sec1
                div#left
                    div#avadiv
                        img(src="../assets/avatar2.jpg", id="avatar")
                    p.t1 #{data.content[0].name}
                    p.p1 #{data.content[0].education}
                    p.p1 #{data.content[0].affiliation}
                    div#detail
                        //- <a href="mailto:hi@aprilwang.me"><i class="fa fa-envelope-o"></i></a>
                        //- <a href="https://twitter.com/AprilWang95"><i class="fa fa-twitter"></i></a> <br>

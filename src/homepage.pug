    div.pusher-container
        div.personal-container
            div.personal
                .info
                    div#avadiv
                        img(src="../assets/avatar.jpg", id="avatar")
                    p.name #{data.content[0].name}
                    p.edu #{data.content[0].education}
                    p.affli #{data.content[0].affiliation}   
                .icons
                    a(href='mailto:ayw7@sfu.ca')
                        <i class="fa fa-envelope-o"></i>
                    a(target="_blank" href='https://twitter.com/AprilWang95')
                        <i class="fa fa-twitter"></i>
                    a(target="_blank" href='https://github.com/LittleAprilFool')
                        <i class="fa fa-github"></i>
                    a(target="_blank" href='https://scholar.google.com/citations?user=yitS6coAAAAJ&hl=en')
                        <i class="fa fa-graduation-cap"></i>
        div.pusher
            section.right.home
                p.title !{data.content[0].meat[0].h}
                p.text !{data.content[0].meat[0].p}
                p.title !{data.content[0].meat[1].h}
                .newslist
                    each news in data.content[0].meat[1].p
                        .newsitem
                            p.date !{news.date}
                            p.news !{news.news}
            section.right.publication.hide
                each item in data.content[1].content
                    p.title !{item.title}
                    each one in item.item
                        p.text !{one}
            section.project.hide
                div#filter-button
                        label(for="idall")
                            input(type="radio" id="idall" checked="checked" name="xx")    
                            div#but(data-filter="all") All
                        each tag,index in data.content[2].projecttag
                            label(for='id'+index)
                                input(type="radio" name="xx" id='id'+index)
                                div#but(data-filter='.'+index) #{tag}
                div.project-list.container
                    each project in data.content[2].project
                        div.project-list-item.mix(class=project.tag id=project.id) 
                            div.project-list-album 
                                img(src=project.album, alt="")
                            div.project-list-name #{project.name}
                            div.project-list-tag-wrap
                                each tag in project.tag
                                    div.project-list-tag #{data.content[2].projecttag[tag]}
                            div.project-list-abstract !{project.abstract}
            section.project-detail.hide
                each project, index in data.content[2].project
                    .project-detail-item(class=project.id)
                        .project-detail-bar
                            <i class="fa fa-angle-left"></i>
                            .project-detail-list list
                        .project-detail-title !{project.name}
                        .project-detail-content !{project.html}
            section.more.hide
                div#two
                    include ../assets/april.svg
                p Say Hi~~~ <i class="fa fa-heart"></i>
                
                p Let me tell you more about myself

                p I have a rarely updated <a class="highlight" target="_blank" href='https://aprilwang.me/blog'>blog</a>
                
                p Oh, and a lovely cat named Ace
                
                div.single-image
                    img(src="./assets/ace.jpg", alt="")

                p I was fascinated in baking, but not any more...
                .bakery
                    img(src="./assets/cake1.jpg")
                    img(src="./assets/cake3.jpg")
                    img(src="./assets/cake4.jpg")  

                p I play table tennis since I was 8 years old
                p But still in the intermediate level <i class="fa fa-meh-o"></i> 
                
                p I love <a target='_blank' href='http://arcg.is/2mVfJp1'>traveling</a>
                p  <i class="fa fa-plane"></i> <i class="fa fa-plane"></i> <i class="fa fa-plane"></i>
                
                div.friends
                    p Now that you have scrolled all the way down here (●′ω`●)
                    p One last thing, meet my squad!
                    div.friendlist
                        each link, friend in data.content[3].friends
                            a(href=link target="_blank" class="friend") #{friend}
                      
